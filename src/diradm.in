# populated by configure...
prefix="@prefix@"
exec_prefix="@exec_prefix@"
bindir="@bindir@"
sbindir="@sbindir@"
# the above actually don't get used
# but these ones do
[ -z "${sysconfdir}" ] && sysconfdir="@sysconfdir@"
[ -z "${libexecdir}" ] && libexecdir="@libexecdir@"
VERSION="@VERSION@"
# This is the path to the script bundled with diradm
# we use it to generate the passwords needed quickly.
MKPASSWD="${libexecdir}/diradm-mkpasswd.pl"

# for recursive calls
#DIRADM="${0}"

# find the config file
# 1. look in SYSCONFDIR
# 2. look in same directory as this script
# 3. look in ~ with prefix '.'
CONFIG_FILENAME="diradm.conf"
CONFIG="${sysconfdir}/${CONFIG_FILENAME}"
#if [ "${1}" == "-c" ]; then
#	CONFIG="${2}"
#	shift 2
#fi
skip=0
for arg in ${*}; do
	if [ $skip -gt 0 ]; then
		skip=$(($skip - 1))
		continue
	fi
	case "${arg}" in
		-c|-C)
			CONFIG="${2}"
			skip=1
			shift 2
			;;
		-m|-M)
			MKPASSWD="${2}"
			skip=1
			shift 2
			;;
		*)
			# continue outside now
			break
			;;
	esac
done
[ ! -f "${CONFIG}" ] && CONFIG="`dirname ${0}`/${CONFIG_FILENAME}"
[ ! -f "${CONFIG}" ] && CONFIG="~/.${CONFIG_FILENAME}"

##################### Don't touch anything below this line #####################

# these are defined here as this is what we track primarily for bugs.
CVS_REVISION='$Revision: 1.11 $'
CVS_DATE='$Date: 2005/01/09 07:01:49 $'
CVS_HEADER='$Header: /code/convert/cvsroot/infrastructure/diradm/src/diradm.in,v 1.11 2005/01/09 07:01:49 robbat2 Exp $'
# get the stripped versions
CVS_REVISION="${CVS_REVISION% *}" ; CVS_REVISION="${CVS_REVISION/* }"
CVS_DATE="${CVS_DATE#* }" ; DATE="${CVS_DATE% *}"

if [ ! -r "${CONFIG}" ]; then
	echo "Unable to open configuration file \"${CONFIG}\"!"
	exit 1
fi

# filled by configure
GREP="@GREP@"
LDAPSEARCH="@LDAPSEARCH@"
LDAPADD="@LDAPADD@"
LDAPMODIFY="@LDAPMODIFY@"
LDAPDELETE="@LDAPDELETE@"
SED="@SED@"
STAT="@STAT@"
PERL="@PERL@"
AWK="@AWK@"
EGREP="@EGREP@"
FGREP="@FGREP@"
HEAD="@HEAD@"
TAIL="@TAIL@"
BASHSH="@BASHSH@"
DATE="@DATE@"
CUT="@CUT@"
UNIQ="@UNIQ@"
SAMBA_NET="@SAMBA_NET@"

# bring in config file
. "${CONFIG}"
# These are the share functions
. "${libexecdir}/diradm.common.sh"
# always bring these in, as they are for help/output stuff.
. "${libexecdir}/diradm.misc.sh"

OPTIONS="-x -H ${LDAPURI}"
if [ -n "$DEBUG" ]; then
	OPTIONS="${OPTIONS} -v"
fi
ADMINOPTIONS="${OPTIONS} -D ${BINDDN}"
if [ -n "${BINDPASS}" ]; then
	ADMINOPTIONS="${ADMINOPTIONS} -w ${BINDPASS}"
else
	ADMINOPTIONS="${ADMINOPTIONS} -W"
fi
#echo $ADMINOPTIONS
LDAPSEARCH="${LDAPSEARCH} ${ADMINOPTIONS}"
LDAPADD="${LDAPADD} ${ADMINOPTIONS}"
LDAPMODIFY="${LDAPMODIFY} -c ${ADMINOPTIONS}"
LDAPDELETE="${LDAPDELETE} ${ADMINOPTIONS}"

commands_user="useradd usermod userdel chsh chfn chage"
commands_group="groupadd groupmod groupdel gpasswd"
commands_samba="smbhostadd smbhostdel"
commands_host="hostadd hostdel hostmod"
commands_misc="help version check _revision _date _header"
valid_commands="${commands_user} ${commands_group} ${commands_host} ${commands_misc}"
[ "$ENABLE_SAMBA" = "yes" ] && valid_commands="${valid_commands} ${commands_samba}"

ACTION=""
for vc in ${valid_commands}; do
	if [ "x${vc}" == "x${1}" ]; then
		ACTION="${vc}"
		break
	fi
done
case ${ACTION} in
	useradd|usermod|userdel|chsh|chfn|chage) . ${libexecdir}/diradm.user.sh ;;
	groupadd|groupmod|groupdel|gpasswd) . ${libexecdir}/diradm.group.sh ;;
	smbhostadd|smbhostdel) . ${libexecdir}/diradm.samba.sh ;;
	hostadd|hostdel|hostmod) . ${libexecdir}/diradm.host.sh  ;;
esac
if [ -n "${ACTION}" ]; then
	shift 1
	${ACTION} "$@"
	exit 0
else
	help
	exit 1

fi

# should not ever reach this point
exit 3
